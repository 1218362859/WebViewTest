<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/sendrequest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/textviewid"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/WanfaShuoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/WanfaShuomingdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/WanfaShuoming"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/shejiangZhongjiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/WanfaShuomingdetail"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shejiangZhongjiangdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shejiangZhongjiang"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/kaijiangFanjiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shejiangZhongjiangdetail"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@android:color/black"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/kaijiangdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/kaijiangFanjiang"
                android:lineSpacingMultiplier="1.5" />

            <TextView
                android:id="@+id/play_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shejiangZhongjiangdetail"
                android:lineSpacingMultiplier="1.5"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TableLayout
                android:id="@+id/play_ruledetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/play_rule"
                android:lineSpacingMultiplier="1.5"

                >


                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="玩法"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="中奖条件"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="单注奖金"
                        android:textColor="@android:color/black" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"

                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="五星直选" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="定位中5个号码" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"

                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="100000元" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"

                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="五星通选一等奖" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"

                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="定位中5个号码" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"

                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="20440元" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="五星通选二等奖" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="定位中前三个或后三个号码" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="220元" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="五星通选三等奖" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="定位中前两个或后两个号码" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="20元" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="三星直选" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="定位中后三个号码" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="1000元" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="三星组三" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="不定位中后三个号码" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="320元" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="三星组六" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="不定位中后三个号码" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="160元" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="二星直选" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="定位中后两个号码" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="100元" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="二星组选" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="不定位中后两个号码" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="50元" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="二星组选和值" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="后两个号码之和" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="50元(对子奖金100元)" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="一星直选" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="中个位号码" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="10元" />

                </TableRow>

                <TableRow android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="大小单双" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="2"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="中十位和个位大小单双" />

                    <TextView
                        android:layout_width="0dp"
                          android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_line_while"
                        android:gravity="center"
                        android:text="4元" />

                </TableRow>

            </TableLayout>


            <Button
                android:id="@+id/sendrequest"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/play_ruledetail"
                android:text="sendRequest" />

            <TextView

                android:layout_width="match_parent"
                  android:layout_height="40dp" />
        </RelativeLayout>

    </ScrollView>
</LinearLayout>
