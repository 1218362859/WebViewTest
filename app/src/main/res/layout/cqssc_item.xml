<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:gravity="center"
        android:layout_weight="1"
        android:id="@+id/text_expect"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/border_line_while"
        android:text="text_expect" />

    <TextView
        android:background="@drawable/border_line_while"
        android:gravity="center"
        android:layout_weight="1"
        android:id="@+id/text_opencode"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:text="text_opencode" />

    <TextView
        android:background="@drawable/border_line_while"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:id="@+id/text_opentime"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="text_opentime" />

    <TextView
        android:background="@drawable/border_line_while"
        android:gravity="center"
        android:layout_weight="1"
        android:id="@+id/text_opentimestamp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:text="text_opentimestamp" />


</LinearLayout>
